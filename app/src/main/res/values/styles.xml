<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/window_background</item>
    </style>
    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="MiEstilo" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_color_text</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="MiEstilo.grande" parent="MiEstilo">
        <item name="android:textSize">38sp</item>
    </style>

    <style name="MiEstilo.grande.negrita">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MiEstilo.botones">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>




    <style name="Calculator" parent="@android:style/TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Calculator.button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Calculator.button.operator">
        <item name="android:background">#EA0</item>
    </style>

    <style name="Calculator.button.number">
        <item name="android:background">#AAA</item>
    </style>

    <style name="Calculator.button.clear">
        <item name="android:background">#A00</item>
    </style>


</resources>
